<Window x:Class="ViScheduler.ContentManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление содержимым" Height="501" Width="441" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Name="ScrollViewer" Grid.Row="0" VerticalAlignment="Stretch"></ScrollViewer>
        <TextBox Height="100" Name="NewLine" Grid.Row="1"></TextBox>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Width="105" Grid.Row="2" Name="AddLineButton" 
                Content="Сохранить" Click="SaveButton_Click"></Button>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="105" Height="25" Grid.Row="2" Name="CloseButton" 
                Content="Закрыть" Click="CloseButton_Click"></Button>
    </Grid>
</Window>
