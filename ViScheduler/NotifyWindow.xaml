<Window x:Class="ViScheduler.NotifyWindow        "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ПОМНИ!" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="InfoBlock" 
                   Text="TextBlock" VerticalAlignment="Stretch" TextAlignment="Center"
                   TextWrapping="Wrap" FontSize="64" />
    </Grid>
</Window>

